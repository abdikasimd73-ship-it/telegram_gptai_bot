{
  "name": "GPT Telegram Bot",
  "description": "A Telegram bot powered by OpenAI GPT, deployed on Heroku.",
  "repository": "https://github.com/YOUR_USERNAME/YOUR_REPO_NAME",
  "keywords": ["telegram", "bot", "gpt", "openai", "flask", "heroku"],
  "env": {
    "TELEGRAM_TOKEN": {
      "description": "Telegram bot token from BotFather",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key from https://platform.openai.com/account/api-keys",
      "required": true
    },
    "APP_URL": {
      "description": "Your Heroku app URL, like https://your-app.herokuapp.com",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo Bot deployed. Set webhook in main.py if needed."
  }
}
